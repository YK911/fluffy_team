<picture class='about-image'>
  <source
    media='(min-width: 1440)'
    type='image/webp'
    srcset='./img/about-us-section/desk-{{path}}.webp 1x, ./img/about-us-section/desk-{{path}}@2x.webp 2x'
  />
  <source
    media='(min-width: 768)'
    type='image/webp'
    srcset='./img/about-us-section/tab-{{path}}.webp 1x, ./img/about-us-section/tab-{{path}}@2x.webp 1x'
  />
  <source
    media='(min-width: 767)'
    type='image/webp'
    srcset='./img/about-us-section/mob-{{path}}.webp 1x, ./img/about-us-section/mob-{{path}}@2x.webp 1x'
  />

  <source
    media='(min-width: 1440)'
    type='image/jpg'
    srcset='./img/about-us-section/desk-{{path}}.jpg 1x, ./img/about-us-section/desk-{{path}}@2x.jpg 2x'
  />
  <source
    media='(min-width: 768)'
    type='image/jpg'
    srcset='./img/about-us-section/tab-{{path}}.jpg 1x, ./img/about-us-section/tab-{{path}}@2x.jpg 1x'
  />
  <source
    media='(min-width: 767)'
    type='image/jpg'
    srcset='./img/about-us-section/mob-{{path}}.jpg 1x, ./img/about-us-section/mob-{{path}}@2x.jpg 1x'
  />

  <img
    src='./img/about-us-section/mob-{{path}}.jpg'
    alt='{{alt}}'
    width='335'
    height='402'
    loading='lazy'
  />
</picture>
